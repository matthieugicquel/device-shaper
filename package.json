{
  "name": "device-shaper-monorepo",
  "private": true,
  "scripts": {
    "start-mcp-server": "npm run --workspace=mcp-server start",
    "build": "yarn workspace device-shaper run build",
    "build:server": "yarn workspace mcp-server run build",
    "prepack": "yarn workspace device-shaper run prepack",
    "test": "yarn workspaces device-shaper run test",
    "test:lint": "eslint . --ext .js,.jsx,.ts,.tsx --report-unused-disable-directives --cache --cache-strategy content --cache-location .cache/eslint.json --max-warnings 0",
    "test:types": "yarn workspaces foreach --all run test:types",
    "run-tester": "yarn workspace device-shaper build && DEBUG='*' sucrase-node ./tester.ts"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "execa": "^5.1.1",
    "fast-glob": "^3.3.2",
    "fast-xml-parser": "^4.3.6",
    "fs-extra": "^11.2.0",
    "ini": "^4.1.2",
    "ps-list": "^8.1.1",
    "remeda": "^1.58.0",
    "simple-plist": "1.4.0",
    "ts-pattern": "^5.1.1",
    "wtfnode": "^0.9.3",
    "zod": "^3.22.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/debug": "^4",
    "@types/fs-extra": "^11",
    "@types/ini": "^4",
    "@types/node": "^20.11.25",
    "@types/wtfnode": "^0",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "cz-git": "^1.9.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "np": "^10.0.3",
    "prettier": "^3.2.5",
    "sucrase": "^3.35.0",
    "type-fest": "^4.15.0",
    "typescript": "^5.4.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "packageManager": "yarn@4.1.1"
}
